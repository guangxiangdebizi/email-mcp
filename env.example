# 邮件提供商配置
# 选择 "smtp" 或 "gmail"
EMAIL_PROVIDER=smtp

# SMTP配置 (如果使用 EMAIL_PROVIDER=smtp)
# 用于Gmail
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false

# 用于QQ邮箱 (取消注释下面几行并注释掉Gmail配置)
# SMTP_HOST=smtp.qq.com
# SMTP_PORT=587
# SMTP_SECURE=false

# 用于163邮箱 (取消注释下面几行并注释掉Gmail配置)
# SMTP_HOST=smtp.163.com
# SMTP_PORT=994
# SMTP_SECURE=true

# 邮箱账号和密码/授权码
SMTP_USER=your-email@qq.com
SMTP_PASS=your-authorization-code

# Gmail API配置 (如果使用 EMAIL_PROVIDER=gmail)
GMAIL_CLIENT_ID=your-gmail-client-id
GMAIL_CLIENT_SECRET=your-gmail-client-secret
GMAIL_REFRESH_TOKEN=your-gmail-refresh-token
GMAIL_ACCESS_TOKEN=your-gmail-access-token

# 默认发件人邮箱地址
DEFAULT_FROM_EMAIL=your-email@qq.com 